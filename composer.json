{
	"name": "duon/quma",
	"description": "A no-ORM database library for executing raw SQL files",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ernst",
			"email": "ernst@duon.run"
		}
	],
	"homepage": "https://duon.run/quma",
	"keywords": [
		"duon",
		"database",
		"sql"
	],
	"autoload": {
		"psr-4": {
			"Duon\\Quma\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Duon\\Quma\\Tests\\": "tests"
		}
	},
	"require": {
		"php": "^8.5",
		"ext-json": "*",
		"ext-readline": "*",
		"ext-pdo": "*",
		"duon/cli": "^0.1"
	},
	"require-dev": {
		"duon/dev": "^2.5"
	},
	"scripts": {
		"test": [
			"./vendor/bin/phpunit --testdox --no-coverage --colors=always"
		],
		"check": "./vendor/bin/psalm --no-cache",
		"mdlint": "markdownlint-cli2 README.md CHANGELOG.md LICENSE.md docs/",
		"coverage": [
			"php -d xdebug.mode=coverage ./vendor/bin/phpunit --testdox --path-coverage --coverage-text --coverage-php=coverage/cover.php --colors=always",
			"./vendor/bin/coverlyzer coverage/cover.php"
		],
		"ci": [
			"composer coverage",
			"composer check",
			"composer mdlint"
		],
		"benchmark": "php bench/run.php"
	}
}
